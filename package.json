{
  "name": "gamers-nexus",
  "version": "0.0.1",
  "description": "A mock up for GN.",
  "repository": "https://github.com/mattcarlotta/nextjs-ssr-kit",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "analyze": "rimraf .next/analyze && analyze=true npm run build",
    "build": "ENV_DEBUG=true ENV_LOAD=.env.prod inStaging=false NODE_OPTIONS='-r snackables' next build",
    "build:stage": "ENV_DEBUG=true ENV_LOAD=.env.prod inStaging=true NODE_OPTIONS='-r snackables' next build",
    "dev": "ENV_DEBUG=true ENV_LOAD=.env.dev NODE_OPTIONS='--max_old_space_size=4096 --inspect -r snackables' next dev",
    "lint": "eslint -c ./.eslintrc --ignore-path ./.eslintignore ./src --ext .ts,.tsx",
    "lint:styles": "stylelint **/*.scss",
    "start": "ENV_DEBUG=true ENV_LOAD=.env.prod NODE_OPTIONS='-r snackables' next start",
    "staging": "ENV_DEBUG=true ENV_LOAD=.env.staging NODE_OPTIONS='-r snackables' next start",
    "test": "jest --config ./jest.json --passWithNoTests",
    "test:cov": "jest --config ./jest.json --coverage",
    "test:e2e": "cypress open --project ./e2e",
    "test:e2erun": "npm run build:staging && concurrently --success first --kill-others \"npm run start:staging\" \"cypress run --config video=false --project ./e2e\"",
    "test:failed": "jest --config ./jest.json --watch --onlyFailures",
    "test:prod": "npm run build && npm run start",
    "test:stage": "ENV_DEBUG=true ENV_LOAD=.env.staging NODE_OPTIONS='-r snackables' next build && npm run staging",
    "test:watch": "jest --config ./jest.json --watch --onlyChanged",
    "test:watchall": "jest --config ./jest.json --watchAll",
    "type:app": "tsc --p ./tsconfig.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run test"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.1.5",
    "@material-ui/core": "^4.11.3",
    "@nivo/bar": "^0.67.0",
    "@nivo/core": "^0.67.0",
    "@nivo/tooltip": "^0.67.0",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "dayjs": "^1.10.4",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "next": "^10.0.6",
    "next-redux-wrapper": "^6.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.2",
    "react-toastify": "^7.0.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "snackables": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@emotion/jest": "^11.2.0",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/jsdom": "^16.2.6",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "browserslist": "^4.16.3",
    "concurrently": "^5.3.0",
    "cypress": "^6.4.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-watch": "^7.0.0",
    "husky": "^5.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.2.0",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "opener": "^1.5.2",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga-test-plan": "^4.0.1",
    "sass": "^1.32.7",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.19.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.4",
    "webpack-bundle-analyzer": "^4.4.0"
  }
}
